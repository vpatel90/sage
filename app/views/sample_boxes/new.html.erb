<%= form_for @sample_box, url: sample_box_path  do |f| %>
<div class="row">
  <div class="col m7">
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :price %><br />
      <%= f.text_field :price %>
    </div>
    <div class="field">
      <%= f.label :pic %><br />
      <%= f.text_field :pic %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
  <div class="col m5">
    <%= fields_for :sample_box_item do |ff| %>
      <div class="field">
        <%= ff.label "Search Item" %>
        <%= react_component('SampleBoxItemSearch') %>
      </div>
    <% end %>
  </div>
</div>
<% end %>
